<MudPaper Class="d-flex justify-content-start" Elevation="0">
    <MudStack Row="true" Class="align-items-end">
        @if (BatteryPercentage < 20)
        {
            <MudChip Icon="@Icons.Material.Filled.Battery1Bar" IconColor="Color.Surface" Color="Color.Error" Size="Size.Small">@BatteryPercentage%</MudChip>
        }
        else if (BatteryPercentage > 20 && BatteryPercentage < 50)
        {
            <MudChip Icon="@Icons.Material.Filled.Battery1Bar" IconColor="Color.Surface" Color="Color.Warning" Size="Size.Small">@BatteryPercentage%</MudChip>
        }
        else if (BatteryPercentage > 50)
        {
            <MudChip Icon="@Icons.Material.Filled.Battery1Bar" IconColor="Color.Surface" Color="Color.Success" Size="Size.Medium">@BatteryPercentage%</MudChip>
        }
    </MudStack>
</MudPaper>

@code {
    [Parameter]
    public double BatteryPercentage { get; set; }
}
