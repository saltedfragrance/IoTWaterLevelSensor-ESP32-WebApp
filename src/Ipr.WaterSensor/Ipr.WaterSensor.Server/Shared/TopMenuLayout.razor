@inherits LayoutComponentBase
@inject NavigationManager navManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer Elevation="4" Anchor="Anchor.Left" DisableOverlay="true" Variant="@DrawerVariant.Mini">
        <MudNavMenu>
            <MudNavLink Class="mb-7 mt-5" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.WaterDrop" IconColor="Color.Info" @onclick="() => WaterTanksPage()"></MudNavLink>
            <MudNavLink Class="mb-7" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.BarChart" IconColor="Color.Primary" @onclick="() => StatsPage()"></MudNavLink>
            <MudNavLink Class="mb-7" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CalendarMonth" IconColor="Color.Tertiary" @onclick="() => CalendarPage()"></MudNavLink>
            <MudNavLink Class="mb-7" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Email" IconColor="Color.Secondary" @onclick="() => EmailPage()"></MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudPaper Width="100%" Elevation="0">
            <MudContainer MaxWidth="MaxWidth.Medium">
                @Body
            </MudContainer>
        </MudPaper>
    </MudMainContent>
</MudLayout>
@code {
    public void WaterTanksPage()
    {
        navManager.NavigateTo("/");
    }

    public void StatsPage()
    {
        navManager.NavigateTo("/statistics");
    }

    public void CalendarPage()
    {
        navManager.NavigateTo("/calendar");
    }
    public void EmailPage()
    {
        navManager.NavigateTo("/emails");
    }
}