@inherits LayoutComponentBase
@inject NavigationManager navManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer Elevation="4" Anchor="Anchor.Left" DisableOverlay="true" Variant="@DrawerVariant.Mini">
        <MudNavMenu>
            <MudNavLink Class="mb-7 mt-5" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.WaterDrop" IconColor="Color.Info" @onclick="() => WaterTanksPage()">Home</MudNavLink>
            <MudNavLink Class="mb-7" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.BarChart" IconColor="Color.Primary" @onclick="() => StatsPage()">Home</MudNavLink>
            <MudNavLink Class="mb-7" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CalendarMonth" IconColor="Color.Tertiary" @onclick="() => CalendarPage()">Home</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    public void WaterTanksPage()
    {
        navManager.NavigateTo("/");
    }

    public void StatsPage()
    {
        navManager.NavigateTo("/stats");
    }

    public void CalendarPage()
    {
        navManager.NavigateTo("/calendar");
    }
}